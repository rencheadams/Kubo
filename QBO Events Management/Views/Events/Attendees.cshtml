@model IEnumerable<QBO_Events_Management.Models.AttendeeList>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Participants";
}

<div class="container">
    <br /><br /><br />
    <h1 class="title">PARTICIPANTS</h1>
    <br /><br />

    <div class="col-lg-3">
        <a class="btn btn-primary" href="@Url.Action("ListOfEvents")">Go Back</a>
        <a class="btn btn-success" href="@Url.Action("AddAttendee")"><i class="fa fa-user-circle"></i> Add Walk-in</a>
    </div>

    <div class="col-lg-6">
        @*<div id="imaginary_container">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-addon">

                        <span class="glyphicon glyphicon-search"></span>

                    </span>
                </div>
            </div>*@
    </div>

    <br /><br /><br />
    <table class="table table-hover table-responsive" id="attendeeTable">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profiles.Name)
                <th>Status</th>
                <th>Date Registered</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
                <tr>
                    <td>
                        <img src="@Url.Content("~/Content/img/default.png")" width="100" class="img-responsive" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profiles.Name)
                    </td>

                    <td></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateRegistered)
                    </td>

                    <td></td>

                    <td>
                        <a href="@Url.Action("Profile", new { id=item.ID})" class="btn btn-success"><i class="fa fa-user"></i> View Profile</a>
                    </td>
                </tr>
        }
        </tbody>

    </table>

</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#attendeeTable').dataTable();

        });


    </script>

}






